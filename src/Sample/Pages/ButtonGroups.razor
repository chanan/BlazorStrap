        <span style="color:#89bdff">&lt;<span style="color:#89bdff">DropdownMenu</span> <span style="color:#89bdff">IsOpen</span>=<span style="color:#65b042">"@@IsOpen"</span>></span>
            <span style="color:#89bdff">&lt;<span style="color:#89bdff">DropdownItem</span> <span style="color:#89bdff">href</span>=<span style="color:#65b042">"#"</span>></span>Dropdown link<span style="color:#89bdff">&lt;/<span style="color:#89bdff">DropdownItem</span>></span>
            <span style="color:#89bdff">&lt;<span style="color:#89bdff">DropdownItem</span> <span style="color:#89bdff">href</span>=<span style="color:#65b042">"#"</span>></span>Dropdown link<span style="color:#89bdff">&lt;/<span style="color:#89bdff">DropdownItem</span>></span>
        <span style="color:#89bdff">&lt;/<span style="color:#89bdff">DropdownMenu</span>></span>
    <span style="color:#89bdff">&lt;/<span style="color:#89bdff">Dropdown</span>></span>
<span style="color:#89bdff">&lt;/<span style="color:#89bdff">ButtonGroup</span>></span>

