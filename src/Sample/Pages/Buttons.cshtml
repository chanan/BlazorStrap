<span style="color:#89bdff">&lt;<span style="color:#89bdff">BlazorButton</span> <span style="color:#89bdff">Color</span>=<span style="color:#65b042">"Color.Secondary"</span>></span>secondary<span style="color:#89bdff">&lt;/<span style="color:#89bdff">BlazorButton</span>></span>
