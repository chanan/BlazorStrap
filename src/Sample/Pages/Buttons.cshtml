<h3>Supplying OnClick Handler</h3>
<div class="docs-example">
    <BlazorButton OnClick="@onclick">Click Me</BlazorButton>
</div>
<pre style="background:#000;color:#f8f8f8">
<span style="color:#89bdff">&lt;<span style="color:#89bdff">BlazorButton</span> <span style="color:#89bdff">OnClick</span>=<span style="color:#65b042">"<span>@@</span>onclick"</span>></span>Click Me<span style="color:#89bdff">&lt;/<span style="color:#89bdff">BlazorButton</span>></span>
<span>@@</span>functions {
    void onclick(UIMouseEventArgs e)
    {
        Console.WriteLine(<span style="color:#65b042">"Button was clicked!"</span>);
    }
}
</pre>

