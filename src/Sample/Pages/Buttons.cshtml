@addTagHelper *, BlazorStrap
@page "/buttons"

<h1>Buttons</h1>

<Alert Color="Color.Info">
    Currently Blazor doesnt allow for components to be named the same name as html elements.
    See: <a class="alert-link" href="https://github.com/aspnet/Blazor/issues/647">https://github.com/aspnet/Blazor/issues/647</a>. Therefore the component is currently named <strong>BlazorButton</strong>.
</Alert>

<div class="docs-example">
    <BlazorButton Color="Color.Primary">primary</BlazorButton>
    <BlazorButton Color="Color.Secondary">secondary</BlazorButton>
    <BlazorButton Color="Color.Success">success</BlazorButton>
    <BlazorButton Color="Color.Info">info</BlazorButton>
    <BlazorButton Color="Color.Warning">warning</BlazorButton>
    <BlazorButton Color="Color.Danger">danger</BlazorButton>
    <BlazorButton Color="Color.Light">light</BlazorButton>
    <BlazorButton Color="Color.Dark">dark</BlazorButton>
    <BlazorButton Color="Color.Link">link</BlazorButton>
</div>
