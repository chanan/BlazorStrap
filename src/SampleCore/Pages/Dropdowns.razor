            <BSDropdownItem IsButton="true" onclick="@menuButtonClick">Action</BSDropdownItem>
            <BSDropdownItem IsDivider="true" />
            <BSDropdownItem IsButton="true" onclick="@menuButtonClick">Yet Another Action</BSDropdownItem>
        </BSDropdownMenu>
    </BSDropdown>
</div>
