@inherits BootstrapComponentBase

<DynamicElement Attributes="@UnknownParameters" TagName="div" class="@classname">
    @ChildContent
</DynamicElement>

@code {
    string classname =>
        new CssBuilder()
            .AddClass("form-check", IsCheck)
            .AddClass("form-group", !IsCheck)
            .AddClass("row", IsRow)
            .AddClass(Class)
        .Build();

    [Parameter] private bool IsRow { get; set; }
    [Parameter] private bool IsCheck { get; set; }
    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}