@inherits BootstrapComponentBase

<DynamicElement TagName="figure" class="@classname" style="@Style" Attributes="@UnknownParameters">
    @ChildContent
</DynamicElement>

@code {
    string classname => $"figure {Class}";
    
    [Parameter]
    private string Class { get; set; }
    [Parameter]
    private string Style { get; set; }
    [Parameter]
    private RenderFragment ChildContent { get; set; }
}
