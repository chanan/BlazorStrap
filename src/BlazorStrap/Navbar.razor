@inherits BootstrapComponentBase

<DynamicElement Attributes="@UnknownParameters" TagName="nav" class="@classname">
    @ChildContent
</DynamicElement>

@code {
    private string classname =>
        new CssBuilder("navbar")
            .AddClass("fixed-top", IsFixedTop)
            .AddClass("fixed-bottom", IsFixedBottom)
            .AddClass("sticky-top", IsStickyTop)
            .AddClass("navbar-dark", IsDark)
            .AddClass("navbar-light", !IsDark)
            .AddClass($"bg-{Color.ToDescriptionString()}", Color != Color.None)
            .AddClass("navbar-expand-lg", IsExpand)
            .AddClass(Class)
        .Build();

    [Parameter] private Color Color { get; set; } = Color.None;
    [Parameter] private bool IsDark { get; set; }
    [Parameter] private bool IsExpand { get; set; }
    [Parameter] private bool IsFixedTop { get; set; }
    [Parameter] private bool IsFixedBottom { get; set; }
    [Parameter] private bool IsStickyTop { get; set; }
    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}