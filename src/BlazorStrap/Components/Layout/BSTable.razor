@namespace BlazorStrap
@inherits CodeBSTable

@if (IsResponsive)
{
    <div class="table-responsive">
        <DynamicElement @attributes="@UnknownParameters" TagName="table" class="@classname">
            @ChildContent
        </DynamicElement>
    </div>
}
@if (!IsResponsive)
{
    <DynamicElement @attributes="@UnknownParameters" TagName="table" class="@classname">
        @ChildContent
    </DynamicElement>
}
