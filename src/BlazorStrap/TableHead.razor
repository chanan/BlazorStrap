@inherits BootstrapComponentBase

<DynamicElement Attributes="@UnknownParameters" TagName="thead" class="@classname">
    @ChildContent
</DynamicElement>

@code {
    string classname =>
        new CssBuilder()
            .AddClass("thead-light", TableHeadType == TableHeadType.Light)
            .AddClass("thead-dark", TableHeadType == TableHeadType.Dark)
            .AddClass(Class)
        .Build();

    [Parameter] private TableHeadType TableHeadType { get; set; } = TableHeadType.None;
    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}