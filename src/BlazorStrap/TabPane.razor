@inherits BootstrapComponentBase

<DynamicElement Attributes="@UnknownParameters" TagName="div" class="@classname" role="tabpanel">
    @ChildContent
</DynamicElement>

@code {
    string classname =>
        new CssBuilder("tab-pane fade")
            .AddClass("active show", IsOpen)
            .AddClass(Class)
        .Build();

    [Parameter] private bool IsOpen { get; set; }
    [Parameter] private string Class { get; set; }
    [Parameter] private RenderFragment ChildContent { get; set; }
}